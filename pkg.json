{
  "name": "exampleProgram",
  "version": "1.0.0",
  "description": "an example program.",
  "author": "genshen <genshenchu@gmail.com>",
  "commands": {
    "debug": "cmake ../",
    "release": "cmake ../",
    "test": "cmake ../"
  },
  "compilers": {
    "cc": "clang",
    "cxx": "clang++"
  },
  "packages": {
    "git": {
      "googletest": {
        "path": "https://github.com/google/googletest.git",
        "tag": "release-1.8.0",
        "build": [
          "RUN {CACHE} cmake {SRC_DIR}/googletest -DCMAKE_INSTALL_PREFIX={PKG_DIR}; make -j4; make install"
        ],
        "cmake_lib": "include_directories({CMAKE_VENDOR_PATH_PKG}/include)\nlink_directories({CMAKE_VENDOR_PATH_PKG}/lib)"
      },
      "kiwi": {
        "path": "https://git.gensh.me/genshen/kiwi.git",
        "hash": "38eae60c80b3dbb4cc345182d10f6bd7096c170d"
      }
    },
    "files": {
      "agrs": {
        "path": "https://raw.githubusercontent.com/Taywee/args/master",
        "files": {
          "args.hxx": "args.hpp"
        },
        "build": [
          "CP args.hpp {INCLUDE}"
        ]
      }
    }
  }
}
